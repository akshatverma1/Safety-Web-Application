    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #000;
            color: #fff;
            font-family: system-ui, -apple-system, sans-serif;
        }

        .min-h-screen {
            min-height: 100vh;
        }

        .bg-gray-900 {
            background-color: #111827;
        }

        .shadow-lg {
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .flex {
            display: flex;
        }

        .items-center {
            align-items: center;
        }

        .justify-between {
            justify-content: space-between;
        }

        .space-x-4> :not([hidden])~ :not([hidden]) {
            margin-left: 1rem;
        }

        .rounded-full {
            border-radius: 9999px;
        }

        .hover\:bg-gray-800:hover {
            background-color: #1f2937;
        }

        .w-10 {
            width: 2.5rem;
        }

        .h-10 {
            height: 2.5rem;
        }

        .font-semibold {
            font-weight: 600;
        }

        .p-2 {
            padding: 0.5rem;
        }

        .w-6 {
            width: 1.5rem;
        }

        .h-6 {
            height: 1.5rem;
        }

        .py-8 {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .grid {
            display: grid;
        }

        .gap-8 {
            gap: 2rem;
        }

        .lg\:grid-cols-3 {
            grid-template-columns: repeat(1, minmax(0, 1fr));
        }

        @media (min-width: 1024px) {
            .lg\:grid-cols-3 {
                grid-template-columns: repeat(3, minmax(0, 1fr));
            }

            .lg\:col-span-2 {
                grid-column: span 2 / span 2;
            }
        }

        .text-2xl {
            font-size: 1.5rem;
            line-height: 2rem;
        }

        .font-bold {
            font-weight: 700;
        }

        .mb-4 {
            margin-bottom: 1rem;
        }

        .rounded-lg {
            border-radius: 0.5rem;
        }

        .overflow-hidden {
            overflow: hidden;
        }

        .safety-map {
            height: 70vh;
            background-color: #1a1a1a;
        }

        .border-b {
            border-bottom-width: 1px;
        }

        .border-gray-800 {
            border-color: #1f2937;
        }

        .text-sm {
            font-size: 0.875rem;
            line-height: 1.25rem;
        }

        .text-gray-400 {
            color: #9ca3af;
        }

        .inline {
            display: inline;
        }

        .mr-1 {
            margin-right: 0.25rem;
        }
        .maindisplay{
            height: 100vh;
            background-color: #000000;
            margin: 1rem;
            border-radius: 1rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .mapview{
            /* border: 2px solid white; */
            height: 100vh;
            width: 100%;
            
        }
        .callview{
            /* border: 2px solid white; */
            width: 200px;
